@model List<ResultNewsDto>
@{
    ViewData["Title"] = "Haberlerimiz";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Haber Türü</th>
        <th>Resim Url</th>
        <th>Başlık</th>
        <th>Açıklama</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Type</td>
            <td>@item.ImageUrl</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <button onclick="deleteNews(this)" id="@item.Id" class="btn btn-outline-danger">Sil</button>
                <a asp-controller="News" asp-action="UpdateNews" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>

    }

</table>
<a asp-controller="News" asp-action="CreateNews" class="btn btn-outline-dark">Yeni Haber Ekle</a>


<script>
    function deleteNews(button){
        var id=button.getAttribute("id");
        Swal.fire({
            title: "Silmek İstediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/News/DeleteNews/" + id;
            }
        });
    }
</script>


