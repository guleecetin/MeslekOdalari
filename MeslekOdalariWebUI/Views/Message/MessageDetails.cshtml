@model ResultMessageDto
@{
    ViewData["Title"] = "Mesaj Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Mesaj Detayları</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th style="width: 30%" class="text-secondary">Gönderen Ad Soyad:</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th class="text-secondary">Gönderen Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th class="text-secondary">Konu:</th>
                        <td>@Model.Subject</td>
                    </tr>
                    <tr>
                        <th class="text-secondary">Mesaj İçeriği:</th>
                        <td class="bg-light p-3 rounded">@Model.MessageContent</td>
                    </tr>
                </tbody>
            </table>
            <div class="mt-3">
                <a asp-controller="Message" asp-action="Index" class="btn btn-dark">
                    <i class="bi bi-arrow-left me-2"></i>Mesajlara geri dön
                </a>
            </div>
        </div>
    </div>
</div>