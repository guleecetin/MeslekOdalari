<style>
    /* Genel Stil İyileştirmeleri */
    section {
        padding: 80px 0;
    }

    .section-heading {
        position: relative;
        margin-bottom: 50px;
    }

        .section-heading:after {
            content: "";
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background-color: #f35525;
        }

    /* Hero Bölümü */
    .hero-section {
        background: linear-gradient(135deg, #1e1e1e 0%, #333 100%);
        color: #fff;
        padding: 120px 0;
        position: relative;
        overflow: hidden;
    }

        .hero-section:before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/img/pattern.png');
            opacity: 0.05;
        }

        .hero-section h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #fff;
        }

        .hero-section h2 {
            color: #f35525;
            font-weight: 600;
        }

        .hero-section .btn {
            background-color: #f35525;
            color: #fff;
            border: none;
            padding: 12px 30px;
            font-size: 18px;
            font-weight: 600;
            transition: all 0.3s ease;
            border-radius: 5px;
        }

            .hero-section .btn:hover {
                background-color: #e04010;
                transform: translateY(-2px);
                box-shadow: 0 8px 15px rgba(243, 85, 37, 0.3);
            }

    .hero-image {
        position: relative;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        transform: perspective(1000px) rotateY(-5deg);
        transition: all 0.5s ease;
    }

        .hero-image:hover {
            transform: perspective(1000px) rotateY(0deg);
        }

    /* Avantajlar Bölümü */
    .features-section {
        background-color: #f8f9fa;
    }

    .feature-card {
        border: none;
        border-radius: 10px;
        transition: all 0.3s ease;
        height: 100%;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

    .card-icon {
        width: 80px;
        height: 80px;
        background-color: #f35525;
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
        margin: 0 auto 20px;
        transition: all 0.3s ease;
    }

    .feature-card:hover .card-icon {
        transform: rotateY(180deg);
        background-color: #1e1e1e;
    }

    .feature-card h4 {
        color: #1e1e1e;
        font-weight: 600;
        margin-bottom: 15px;
    }

    /* Nasıl Üye Olunur Bölümü */
    .steps-section {
        background-color: #fff;
    }

    .step-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 40px;
        position: relative;
    }

        .step-item:after {
            content: "";
            position: absolute;
            left: 25px;
            top: 60px;
            bottom: -40px;
            width: 2px;
            background-color: #f35525;
            z-index: 1;
        }

        .step-item:last-child:after {
            display: none;
        }

    .step-number {
        width: 50px;
        height: 50px;
        background-color: #f35525;
        color: #fff;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-weight: 700;
        margin-right: 20px;
        flex-shrink: 0;
        z-index: 2;
        box-shadow: 0 5px 15px rgba(243, 85, 37, 0.3);
    }

    .step-item h4 {
        color: #1e1e1e;
        font-weight: 600;
        margin-bottom: 10px;
    }

    /* Testimonials Bölümü */
    .testimonial-section {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 80px 0;
    }

    .testimonial-card {
        background-color: #fff;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        height: 100%;
    }

        .testimonial-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

    .testimonial-img {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #f35525;
        margin: 0 auto 15px;
    }

    /* Yasal Zorunluluklar Bölümü */
    .legal-section {
        background-color: #f8f9fa;
    }

    .legal-card {
        background-color: #fff;
        border-left: 4px solid #f35525;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    /* Belgeler Bölümü */
    .documents-section {
        background-color: #fff;
    }

    .document-card {
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

        .document-card:hover {
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            border-color: #f35525;
        }

    .document-icon {
        width: 60px;
        height: 60px;
        background-color: #f8f9fa;
        color: #f35525;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        margin-right: 20px;
    }

    /* FAQ Bölümü */
    .faq-section {
        background-color: #fff;
    }

    .faq-item {
        margin-bottom: 15px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
    }

    .faq-question {
        background-color: #f8f9fa;
        padding: 15px 20px;
        font-weight: 600;
        cursor: pointer;
        position: relative;
        transition: all 0.3s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .faq-question:hover {
            background-color: #f35525;
            color: #fff;
        }

        .faq-question.active {
            background-color: #f35525;
            color: #fff;
        }

    .faq-answer {
        padding: 20px;
        display: none;
        background-color: #fff;
        border-left: 2px solid #f35525;
        border-right: 2px solid #f35525;
        border-bottom: 2px solid #f35525;
        border-radius: 0 0 8px 8px;
    }

    /* CTA Bölümü */
    .cta-section {
        background: linear-gradient(135deg, #f35525 0%, #e04010 100%);
        color: #fff;
        padding: 80px 0;
        position: relative;
        overflow: hidden;
    }

        .cta-section:before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/img/pattern.png');
            opacity: 0.1;
        }

        .cta-section .btn {
            background-color: #fff;
            color: #f35525;
            border: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .cta-section .btn:hover {
                background-color: #1e1e1e;
                color: #fff;
                transform: translateY(-2px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
            }

    /* Responsive Düzenlemeler */
    @@media (max-width: 991px) {
        .hero-section

