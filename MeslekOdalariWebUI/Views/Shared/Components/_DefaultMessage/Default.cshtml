<div class="col-lg-5">
    <form asp-controller="SendMessage" asp-action="SendMessage" method="post" id="contact-form">
        <div class="row">
            <div class="col-lg-12">
                <fieldset>
                    <label for="name" style="font-size: 1.3rem; font-weight: 600;">Ad Soyad</label>
                    <input type="name" name="Name" id="name" placeholder="Adınız Soyadınız..." required style="font-size: 1.2rem; padding: 15px; margin-bottom: 20px;">
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                    <label for="email" style="font-size: 1.3rem; font-weight: 600;">Email</label>
                    <input type="text" name="Email" id="email" placeholder="E-mail Adresiniz..." required="" style="font-size: 1.2rem; padding: 15px; margin-bottom: 20px;">
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                    <label for="subject" style="font-size: 1.3rem; font-weight: 600;">Konu</label>
                    <input type="subject" name="Subject" id="subject" placeholder="Konu..." autocomplete="on" style="font-size: 1.2rem; padding: 15px; margin-bottom: 20px;">
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                    <label for="message" style="font-size: 1.3rem; font-weight: 600;">Mesaj</label>
                    <textarea name="MessageContent" id="message" placeholder="Mesajınızı Buraya Yazabilirsiniz.." style="font-size: 1.2rem; padding: 15px; height: 180px;"></textarea>
                </fieldset>
            </div>
            <div class="col-lg-12">
                <fieldset>
                    <button type="submit" id="form-submit" class="orange-button" style="font-size: 1.3rem; padding: 12px 25px;">Gönder</button>
                </fieldset>
            </div>
        </div>
    </form>
</div>