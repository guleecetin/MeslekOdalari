@model List<ResultNewsDto>
@{
    int titleCount = 0;
    var titleActive = "";
    int contentCount = 0;
    var contentActive = "";
}
<div class="section best-deal">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="section-heading">
                    <h6>| Haberler</h6>
                    <h2>Günün Haberleri</h2>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="tabs-content">
                    <div class="row">
                        <div class="nav-wrapper">
                            <ul class="nav nav-tabs" role="tablist">
                                @foreach (var item in Model)
                                {
                                    titleCount++;
                                    if (titleCount == 1) { titleActive = "active"; } else { titleActive = ""; }
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link @titleActive" id="@item.Type-tab" data-bs-toggle="tab" data-bs-target="#@item.Type-content" type="button" role="tab" aria-controls="@item.Type-content" aria-selected="@(titleActive == "active" ? "true" : "false")">@item.Type</button>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="tab-content" id="myTabContent">
                            @{
                                contentCount = 0;
                            }
                            @foreach (var item in Model)
                            {
                                contentCount++;
                                if (contentCount == 1) { contentActive = "active"; } else { contentActive = ""; }
                                <div class="tab-pane fade show @contentActive" id="@item.Type-content" role="tabpanel" aria-labelledby="@item.Type-tab">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <img src="@item.ImageUrl" alt="@item.Title" style="width: 100%; height: auto; max-height: 400px; object-fit: cover;">
                                        </div>
                                        <div class="col-lg-6">
                                            <h4>@item.Title</h4>
                                            <p style="font-size: 1.2rem; line-height: 1.6;">
                                                @item.Description
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>