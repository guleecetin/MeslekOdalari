    <!-- Dropdown için geliştirilmiş özel CSS -->
    <style>

        .main-nav .nav .dropdown-menu {
            background-color: #f0f0f0;
            border-radius: 0;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            margin: 0 !important;
            padding: 0 !important;
            border: none;
            min-width: 200px;
            border-top: 3px solid #f35525;
            animation: fadeIn 0.3s ease;
            position: absolute;
            text-align: left;
            z-index: 1000;
            left: 0 !important;
            top: 100%;
            width: max-content !important;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .main-nav .nav .dropdown-menu .dropdown-item {
            padding: 4px 12px !important;
            margin: 0 !important;
            color: #000 !important;
            font-size: 18px !important;
            font-weight: 600;
            font-family: 'Poppins', sans-serif;
            transition: all 0.2s ease-in-out;
            background-color: transparent !important;
            border-radius: 0 !important;
            text-align: left;
            display: flex;
            align-items: center;
            width: 100%;
            line-height: 1.1 !important;
            border: none !important;
            height: auto !important;
            white-space: nowrap; /* kelimeler satıra sığsın, taşmasın */
        }

        /* Tüm dropdown öğeler için aynı stili uygulayalım */
        .main-nav .nav .dropdown-menu li > .dropdown-item {
            font-weight: 600 !important;
            padding-top: 0px !important;
            margin-top: 20px !important;
            line-height: 1.1 !important;
        }

        /* İlk öğe için margin düzenlemesi (zaten var) */
        .main-nav .nav .dropdown-menu li:nth-child(1) > .dropdown-item {
            font-weight: 600 !important;
            padding-top: 0px !important;
            margin-top: 20px !important;
            line-height: 1.1 !important;
        }

        /* İkinci ve sonraki öğeler için margin düzenlemesi */
        .main-nav .nav .dropdown-menu li:not(:first-child) > .dropdown-item {
            font-weight: 600 !important;
            padding-top: 0px !important;
            margin-top: -20px !important;
            line-height: 1.1 !important;
        }

        /* Hover stilleri tüm öğeler için */
        .main-nav .nav .dropdown-menu .dropdown-item:hover {
            background-color: #e0e0e0 !important;
            color: #f35525 !important;
            padding-left: 15px !important;
        }

            .main-nav .nav .dropdown-menu .dropdown-item:hover::before {
                content: "›";
                position: absolute;
                left: 8px;
                color: #f35525;
                font-weight: bold;
            }

        /* Tüm öğeler için hover durumu */
        .main-nav .nav .dropdown-menu li > .dropdown-item:hover {
            background-color: #e0e0e0 !important;
            color: #f35525 !important;
            padding-left: 15px !important;
            /* Daha hoş bir görünüm için ekstra stil */
            padding-top: 12px !important;
            padding-bottom: 6px !important;
            border-radius: 4px;
        }

        .main-nav .nav .dropdown-toggle::after {
            display: inline-block;
            margin-left: 5px;
            vertical-align: middle;
            content: "";
            border-top: 4px solid #1e1e1e;
            border-right: 4px solid transparent;
            border-bottom: 0;
            border-left: 4px solid transparent;
            transition: transform 0.3s;
        }

        .main-nav .nav .nav-item.dropdown:hover .dropdown-toggle::after {
            transform: rotate(180deg);
            border-top-color: #f35525;
        }

        .main-nav .nav .nav-item.dropdown:hover .dropdown-toggle {
            color: #f35525;
        }

        .main-nav .nav .nav-item.dropdown {
            position: relative;
        }

        @@media (max-width: 991px) {
            .main-nav .nav .dropdown-menu

        {
            background-color: rgba(250, 250, 250, 0.95);
            margin-top: 0;
            padding: 0 15px;
            border-radius: 0;
            box-shadow: none;
            border-top: none;
        }

        }

        h1, h2, h3, h4, h5, h6 {
            font-size: 2rem !important;
        }

        .main-nav ul.nav > li > a {
            font-size: 20px !important;
            padding: 0 20px;
            height: 100px;
            line-height: 100px;
            display: inline-block;
            font-weight: 400;
            text-transform: capitalize;
            color: #1e1e1e;
            transition: all 0.3s ease 0s;
        }

        .main-nav .dropdown-menu .dropdown-item {
            font-size: 18px !important;
        }

        footer p {
            font-size: 18px !important;
        }

        .main-nav .nav-item.dropdown .dropdown-menu {
            left: 0;
            margin-left: 0;
        }

        .main-nav ul.nav > li {
            display: inline-block;
            margin: 0;
            padding: 0;
        }

        .main-nav ul.nav {
            display: flex;
            align-items: center;
            height: 100px;
        }

            /* YENİ - Simge stillerinin tutarlı olması için */
            .main-nav ul.nav > li > a i {
                margin-right: 5px;
            }

            /* YENİ - Hover ve active durumları için tutarlı görünüm */
            .main-nav ul.nav > li > a.active,
            .main-nav ul.nav > li > a:hover {
                color: #f35525;
            }

        .main-nav .nav .dropdown-menu.compact-dropdown {
            background-color: #f0f0f0;
            border-radius: 0;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            margin: 0 !important;
            padding: 5px 0 !important;
            border: none;
            min-width: 200px;
            border-top: 3px solid #f35525;
            animation: fadeIn 0.3s ease;
            position: absolute;
            text-align: left;
            z-index: 1000;
            left: 0 !important;
            top: 100%;
            width: max-content !important;
        }

            .main-nav .nav .dropdown-menu.compact-dropdown .dropdown-item {
                padding: 4px 12px !important;
                margin: 0 !important;
                color: #000 !important;
                font-size: 16px !important;
                font-weight: 500;
                font-family: 'Poppins', sans-serif;
                transition: all 0.2s ease-in-out;
                background-color: transparent !important;
                border-radius: 0 !important;
                text-align: left;
                display: flex;
                align-items: center;
                width: 100%;
                line-height: 1.2 !important;
                border: none !important;
                height: auto !important;
                white-space: nowrap;
            }

                .main-nav .nav .dropdown-menu.compact-dropdown .dropdown-item:hover {
                    background-color: #e0e0e0 !important;
                    color: #f35525 !important;
                    padding-left: 15px !important;
                }

                    .main-nav .nav .dropdown-menu.compact-dropdown .dropdown-item:hover::before {
                        content: "›";
                        position: absolute;
                        left: 8px;
                        color: #f35525;
                        font-weight: bold;
                    }

        .main-nav ul.nav {
            display: flex;
            align-items: center;
            height: 100px;
            flex-wrap: nowrap; /* Öğelerin sarmalanmasını önler */
            justify-content: space-between; /* Öğeler arasında eşit boşluk dağılımı */
        }

            .main-nav ul.nav > li > a {
                font-size: 18px !important; /* Font boyutunu biraz küçültüyoruz */
                padding: 0 15px; /* Yatay dolguyu azaltıyoruz */
                height: 100px;
                line-height: 100px;
                display: inline-block;
                font-weight: 400;
                text-transform: capitalize;
                color: #1e1e1e;
                transition: all 0.3s ease 0s;
                white-space: nowrap; /* Metin içeriğinin birden fazla satıra bölünmesini engeller */
            }

            /* Son öğeyi biraz daha küçültün */
            .main-nav ul.nav > li:last-child > a {
                font-size: 16px !important;
                padding: 0 10px;
            }

        /* Daha küçük ekranlar için ek ayarlamalar */
        @@media (max-width: 1200px) {
            .main-nav ul.nav > li > a

        {
            font-size: 16px !important;
            padding: 0 10px;
        }

        .main-nav ul.nav > li:last-child > a {
            font-size: 15px !important;
            padding: 0 8px;
        }

        }

    </style>
 
