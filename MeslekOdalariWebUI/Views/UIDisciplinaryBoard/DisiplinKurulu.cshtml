@model List<ResultDisciplinaryBoardDto>
@{
    ViewData["Title"] = "DisiplinKurulu";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<div class="container py-5">
    <!-- Sayfa Başlığı -->
    <div class="text-center mb-5">
        <h1 class="fw-bold text-primary mb-2">Disiplin Kurulu</h1>
        <p class="lead text-muted">Kurumumuzun değerli kurul üyeleri</p>
        <hr class="my-4 mx-auto" style="max-width: 100px;">
    </div>

    <!-- Kurul Üyeleri Listesi -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <div class="h-100 d-flex align-items-center justify-content-center p-3">
                                    <img src="@item.ImageUrl" class="img-fluid rounded shadow-sm" style="width: 100%; height: 220px; object-fit: cover;" alt="@item.FullName">
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="p-4">
                                    <h5 class="card-title fw-bold mb-1">@item.FullName</h5>
                                    <p class="card-text mb-1"><i class="bi bi-briefcase me-2"></i>@item.SubTitle1</p>
                                    <p class="card-text text-muted"><i class="bi bi-building me-2"></i>@item.SubTitle2</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        @if (Model.Count == 0)
        {
            <div class="col-12 text-center py-5">
                <div class="py-4">
                    <i class="bi bi-people fs-1 text-muted"></i>
                    <h5 class="mt-3">Henüz disiplin kurulu üyesi bulunmamaktadır</h5>
                    <p class="text-muted">Yakında disiplin kurulu üyelerimiz burada listelenecektir</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    img {
        transition: transform 0.5s;
    }

    .card:hover img {
        transform: scale(1.05);
    }

    .card-title, .card-text {
        font-size: 1.1rem;
    }

    h1 {
        font-size: 2.5rem;
    }

    .lead {
        font-size: 1.2rem;
    }

    @@media (max-width: 767.98px) {
        .col-md-4

    {
        padding: 1rem;
    }

    }
</style>