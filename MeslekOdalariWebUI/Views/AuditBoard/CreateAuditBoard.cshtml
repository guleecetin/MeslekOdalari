@model CreateAuditBoardDto
@{
    ViewData["Title"] = "Yeni Denetim Kurulu Ekleem Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid py-4">
    <!-- Sayfa Başlığı -->
    <div class="mb-4">
        <h3 class="text-dark mb-2">Yeni Denetim Kurulu Üyesi Ekle</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a asp-controller="AuditBoard" asp-action="Index">Denetim Kurulu</a></li>
                <li class="breadcrumb-item active" aria-current="page">Yeni Üye Ekle</li>
            </ol>
        </nav>
    </div>

    <!-- Form Kartı -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-primary"><i class="bi bi-person-plus me-2"></i>Üye Bilgileri</h5>
        </div>
        <div class="card-body p-4">
            <form method="post" class="needs-validation" novalidate>
                <div class="row g-4">
                    <!-- Fotoğraf URL -->
                    <div class="col-md-12">
                        <div class="form-floating mb-2">
                            <input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl" placeholder="Fotoğraf URL" required />
                            <label for="ImageUrl"><i class="bi bi-image me-1"></i>Fotoğraf URL</label>
                        </div>
                        <div class="form-text text-muted">Üyenin fotoğrafı için yüklenmiş bir görselin URL'si</div>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <!-- Ad-Soyad -->
                    <div class="col-md-12">
                        <div class="form-floating mb-2">
                            <input type="text" asp-for="FullName" class="form-control" id="FullName" placeholder="Ad-Soyad" required />
                            <label for="FullName"><i class="bi bi-person me-1"></i>Ad-Soyad</label>
                        </div>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Unvan -->
                    <div class="col-md-6">
                        <div class="form-floating mb-2">
                            <input type="text" asp-for="SubTitle1" class="form-control" id="SubTitle1" placeholder="Unvan" required />
                            <label for="SubTitle1"><i class="bi bi-award me-1"></i>Unvan</label>
                        </div>
                        <span asp-validation-for="SubTitle1" class="text-danger"></span>
                    </div>

                    <!-- Kurum Bilgisi -->
                    <div class="col-md-6">
                        <div class="form-floating mb-2">
                            <input type="text" asp-for="SubTitle2" class="form-control" id="SubTitle2" placeholder="Kurum Bilgisi" required />
                            <label for="SubTitle2"><i class="bi bi-building me-1"></i>Kurum Bilgisi</label>
                        </div>
                        <span asp-validation-for="SubTitle2" class="text-danger"></span>
                    </div>

                    <!-- Butonlar -->
                    <div class="col-12 mt-4">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Kaydet
                            </button>
                            <a asp-controller="AuditBoard" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-floating > label {
        font-size: 1rem;
    }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
    }

    .card {
        transition: all 0.3s ease;
    }

    .btn {
        font-size: 1.1rem;
        padding: 0.5rem 1.5rem;
    }

    .form-text {
        font-size: 0.875rem;
    }
</style>

<script>
    // Form doğrulama
    (function () {
        'use strict'

        // Doğrulama stillerini uygulayan form
        var forms = document.querySelectorAll('.needs-validation')

        // Gönderme işlemini engelleme ve doğrulama
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()

    // Kaydetme onayı
    document.querySelector('form').addEventListener('submit', function(event) {
        // Form doğrulaması geçerli ise onay göster
        if (this.checkValidity()) {
            event.preventDefault();

            Swal.fire({
                title: 'Üye Kaydedilsin mi?',
                text: 'Yeni denetim kurulu üyesi sisteme eklenecektir.',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, Kaydet',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit();
                }
            });
        }
    });
</script>