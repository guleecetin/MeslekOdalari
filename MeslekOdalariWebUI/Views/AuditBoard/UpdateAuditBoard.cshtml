@model UpdateAuditBoardDto
@{
    ViewData["Title"] = "Denetim Kurulu Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Sayfa Başlığı -->
    <div class="mb-4">
        <h3 class="text-dark mb-2">Denetim Kurulu Üyesi Güncelle</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                <li class="breadcrumb-item"><a asp-controller="AuditBoard" asp-action="Index">Denetim Kurulu</a></li>
                <li class="breadcrumb-item active" aria-current="page">Üye Güncelle</li>
            </ol>
        </nav>
    </div>

    <!-- Form Kartı -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-primary"><i class="bi bi-pencil-square me-2"></i>Üye Bilgilerini Düzenle</h5>
        </div>
        <div class="card-body p-4">
            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="row g-4">
                    <!-- Mevcut Fotoğraf Önizleme -->
                    <div class="col-md-12 mb-3">
                        <div id="currentImagePreview" class="text-center mb-3" style="display: @(string.IsNullOrEmpty(Model.ImageUrl) ? "none" : "block")">
                            <p class="text-muted mb-2">Mevcut Fotoğraf</p>
                            <img src="@Model.ImageUrl" id="currentImage" class="img-thumbnail rounded" style="max-height: 150px;" alt="Mevcut Fotoğraf" />
                        </div>
                    </div>

                    <!-- Fotoğraf URL -->
                    <div class="col-md-12">
                        <div class="form-floating mb-2">
                            <input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl" placeholder="Fotoğraf URL" required
                                   oninput="document.getElementById('currentImage').src=this.value; document.getElementById('currentImagePreview').style.display='block';" />
                            <label for="ImageUrl"><i class="bi bi-image me-1"></i>Fotoğraf URL</label>
                        </div>
                        <div class="form-text text-muted">Üyenin fotoğrafı için yüklenmiş bir görselin URL'si</div>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <!-- Ad-Soyad -->
                    <div class="col-md-12">
                        <div class="form-floating mb-2">
                            <input type="text" asp-for="FullName" class="form-control" id="FullName" placeholder="Ad-Soyad" required />
                            <label for="FullName"><i class="bi bi-person me-1"></i>Ad-Soyad</label>
                        </div>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Unvan -->
                    <div class="col-md-6">
                        <div class="form-floating mb-2">
                            <input type="text" asp-for="SubTitle1" class="form-control" id="SubTitle1" placeholder="Unvan" required />
                            <label for="SubTitle1"><i class="bi bi-award me-1"></i>Unvan</label>
                        </div>
                        <span asp-validation-for="SubTitle1" class="text-danger"></span>
                    </div>

                    <!-- Kurum Bilgisi -->
                    <div class="col-md-6">
                        <div class="form-floating mb-2">
                            <input type="text" asp-for="SubTitle2" class="form-control" id="SubTitle2" placeholder="Kurum Bilgisi" required />
                            <label for="SubTitle2"><i class="bi bi-building me-1"></i>Kurum Bilgisi</label>
                        </div>
                        <span asp-validation-for="SubTitle2" class="text-danger"></span>
                    </div>

                    <!-- Butonlar -->
                    <div class="col-12 mt-4">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-info text-white">
                                <i class="bi bi-check-circle me-2"></i>Güncelle
                            </button>
                            <a asp-controller="AuditBoard" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-floating > label {
        font-size: 1rem;
    }

    .form-control:focus {
        border-color: #5bc0de;
        box-shadow: 0 0 0 0.25rem rgba(91, 192, 222, 0.25);
    }

    .card {
        transition: all 0.3s ease;
    }

    .btn {
        font-size: 1.1rem;
        padding: 0.5rem 1.5rem;
    }

    .form-text {
        font-size: 0.875rem;
    }

    #currentImage {
        transition: all 0.3s ease;
        border: 2px solid #dee2e6;
    }

        #currentImage:hover {
            transform: scale(1.05);
        }

    /* Form doğrulama stillemeleri */
    .was-validated .form-control:valid {
        border-color: #198754;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23198754' d='M2.3 6.73L.6 4.53c-.4-1.04.46-1.4 1.1-.8l1.1 1.4 3.4-3.8c.6-.63 1.6-.27 1.2.7l-4 4.6c-.43.5-.8.4-1.1.1z'/%3e%3c/svg%3e");
        padding-right: calc(1.5em + 0.75rem);
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }

    .was-validated .form-control:invalid {
        border-color: #dc3545;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
        padding-right: calc(1.5em + 0.75rem);
        background-repeat: no-repeat;
        background-position: right calc(0.375em + 0.1875rem) center;
        background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }
</style>

<script>
    // Form doğrulama
    (function () {
        'use strict'

        // Doğrulama stillerini uygulayan form
        var forms = document.querySelectorAll('.needs-validation')

        // Gönderme işlemini engelleme ve doğrulama
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()

    // Güncelleme onayı
    document.querySelector('form').addEventListener('submit', function(event) {
        // Form doğrulaması geçerli ise onay göster
        if (this.checkValidity()) {
            event.preventDefault();

            Swal.fire({
                title: 'Değişiklikler Kaydedilsin mi?',
                text: 'Denetim kurulu üyesi bilgileri güncellenecektir.',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#17a2b8',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Evet, Güncelle',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit();
                }
            });
        }
    });

    // Sayfa yüklendiğinde çalışacak kodlar
    document.addEventListener('DOMContentLoaded', function() {
        // Resim URL'si değiştikçe önizleme güncellenir
        document.getElementById('ImageUrl').addEventListener('input', function() {
            var previewDiv = document.getElementById('currentImagePreview');
            var previewImg = document.getElementById('currentImage');

            if(this.value) {
                previewImg.src = this.value;
                previewDiv.style.display = 'block';
            } else {
                previewDiv.style.display = 'none';
            }
        });
    });
</script>
