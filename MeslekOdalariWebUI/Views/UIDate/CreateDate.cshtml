@model CreateDateDto
@{
    ViewData["Title"] = "Rezervasyon oluşturma sayfası";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0" style="box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); border-radius: 0.5rem;">
                <div class="card-header bg-primary text-white py-3" style="border-radius: 0.5rem 0.5rem 0 0;">
                    <h2 class="mb-0 text-center fs-4">Yeni Randevu Oluştur</h2>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row g-4">
                            <!-- Randevu Bilgileri Bölümü -->
                            <div class="col-12">
                                <div class="card bg-light border-0" style="border-radius: 0.5rem;">
                                    <div class="card-body">
                                        <h5 class="card-title border-bottom pb-3" style="color: #0d6efd;">
                                            <i class="bi bi-calendar-check me-2"></i>Randevu Bilgileri
                                        </h5>
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <label asp-for="RandevuNo" class="form-label fw-semibold">Randevu No</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-hash"></i></span>
                                                    <input asp-for="RandevuNo" class="form-control" placeholder="Randevu numarası" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="HizmetTuru" class="form-label fw-semibold">Hizmet Türü</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-list-check"></i></span>
                                                    <select asp-for="HizmetTuru" class="form-select">
                                                        <option value="">Seçiniz</option>
                                                        <option>Sicil Kaydı</option>
                                                        <option>İşyeri Tescil</option>
                                                        <option>Meslek Belgesi</option>
                                                        <option>Ustalık Belgesi</option>
                                                        <option>İş Yeri Açma Ruhsatı</option>
                                                        <option>Bilgi Güncelleme</option>
                                                        <option>İşyeri Kapanış</option>
                                                        <option>Danışmanlık</option>
                                                        <option>Diğer</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="HizmetDetay" class="form-label fw-semibold">Hizmet Detay</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-info-circle"></i></span>
                                                    <input asp-for="HizmetDetay" class="form-control" placeholder="Hizmet detaylarını giriniz" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="RandevuTarih" class="form-label fw-semibold">Randevu Tarihi</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-calendar3"></i></span>
                                                    <input asp-for="RandevuTarih" class="form-control" type="date" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label asp-for="RandevuSaat" class="form-label fw-semibold">Randevu Saati</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-clock"></i></span>
                                                    <input asp-for="RandevuSaat" class="form-control" type="time" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Üye Bilgileri Bölümü -->
                            <div class="col-md-6">
                                <div class="card bg-light border-0 h-100" style="border-radius: 0.5rem;">
                                    <div class="card-body">
                                        <h5 class="card-title border-bottom pb-3" style="color: #0d6efd;">
                                            <i class="bi bi-person me-2"></i>Üye Bilgileri
                                        </h5>
                                        <div class="row g-3">
                                            <div class="col-12">
                                                <label asp-for="AdSoyad" class="form-label fw-semibold">Ad Soyad</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-person-badge"></i></span>
                                                    <input asp-for="AdSoyad" class="form-control" placeholder="Ad ve soyadı giriniz" />
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="TcNo" class="form-label fw-semibold">T.C. No</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-card-heading"></i></span>
                                                    <input asp-for="TcNo" class="form-control" placeholder="T.C. Kimlik numarası" />
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="Telefon" class="form-label fw-semibold">Telefon</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-telephone"></i></span>
                                                    <input asp-for="Telefon" class="form-control" placeholder="Telefon numarası" />
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="Email" class="form-label fw-semibold">E-mail</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-envelope"></i></span>
                                                    <input asp-for="Email" class="form-control" placeholder="E-posta adresi" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sağ Taraf: İşletme ve Diğer Bilgiler -->
                            <div class="col-md-6">
                                <!-- İşletme Bilgileri Bölümü -->
                                <div class="card bg-light border-0 mb-4" style="border-radius: 0.5rem;">
                                    <div class="card-body">
                                        <h5 class="card-title border-bottom pb-3" style="color: #0d6efd;">
                                            <i class="bi bi-building me-2"></i>İşletme Bilgileri
                                        </h5>
                                        <div class="row g-3">
                                            <div class="col-12">
                                                <label asp-for="IsletmeAdi" class="form-label fw-semibold">İşletme Adı</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-shop"></i></span>
                                                    <input asp-for="IsletmeAdi" class="form-control" placeholder="İşletme adını giriniz" />
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="SicilNo" class="form-label fw-semibold">Sicil No</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-upc-scan"></i></span>
                                                    <input asp-for="SicilNo" class="form-control" placeholder="Sicil numarası" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Diğer Bilgiler Bölümü -->
                                <div class="card bg-light border-0" style="border-radius: 0.5rem;">
                                    <div class="card-body">
                                        <h5 class="card-title border-bottom pb-3" style="color: #0d6efd;">
                                            <i class="bi bi-gear me-2"></i>Diğer Bilgiler
                                        </h5>
                                        <div class="row g-3">
                                            <div class="col-12">
                                                <label asp-for="OlusturmaTarihi" class="form-label fw-semibold">Oluşturma Tarihi</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-calendar-plus"></i></span>
                                                    <input asp-for="OlusturmaTarihi" class="form-control" type="date" />
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label asp-for="Durum" class="form-label fw-semibold">Durum</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-white"><i class="bi bi-toggle-on"></i></span>
                                                    <select asp-for="Durum" class="form-select">
                                                        <option value="">Seçiniz</option>
                                                        <option value="Aktif">Aktif</option>
                                                        <option value="Pasif">Pasif</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Buton -->
                            <!-- Buton -->
                            <div class="col-12">
                                <div class="d-grid d-md-flex justify-content-md-end gap-2">
                                    <a asp-controller="Default" asp-action="Index" class="btn btn-outline-secondary px-4">
                                        <i class="bi bi-x-circle me-2"></i>İptal
                                    </a>
                                    <button type="submit" class="btn btn-primary px-4">
                                        <i class="bi bi-check-circle me-2"></i>Randevu Oluştur
                                    </button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
}