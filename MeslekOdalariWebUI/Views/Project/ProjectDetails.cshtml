@model ResultProjectDto
@{
    ViewData["Title"] = "Proje Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="text-dark mb-0">Proje Detayları</h3>
            <p class="text-muted">Seçtiğiniz projenin detaylı bilgileri</p>
        </div>
        <a asp-controller="Project" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Projelere Geri Dön
        </a>
    </div>

    <!-- Project Details Card -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm overflow-hidden">
                <div class="card-img-top position-relative">
                    <img src="@Model.ImageUrl" class="img-fluid w-100" style="max-height: 400px; object-fit: cover;" alt="@Model.Title" />
                    <div class="position-absolute bottom-0 start-0 w-100 bg-dark bg-opacity-75 p-3">
                        <h4 class="text-white mb-0">@Model.Title</h4>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row mt-3">
                        <div class="col-12">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary rounded-circle p-2 me-3">
                                    <i class="bi bi-info-circle text-white"></i>
                                </div>
                                <h5 class="fw-bold text-primary mb-0">Proje Bilgileri</h5>
                            </div>

                            <div class="border-start border-3 border-primary ps-4 py-2 mb-4">
                                <h6 class="fw-bold text-dark mb-2">Başlık</h6>
                                <p class="text-dark fs-5">@Model.Title</p>
                            </div>

                            <div class="border-start border-3 border-primary ps-4 py-2">
                                <h6 class="fw-bold text-dark mb-2">Açıklama</h6>
                                <p class="text-dark">@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-light p-4">
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Project" asp-action="UpdateProject" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square me-2"></i>Projeyi Düzenle
                        </a>
                        <a asp-controller="Project" asp-action="DeleteProject" asp-route-id="@Model.Id" class="btn btn-outline-danger" onclick="return confirm('Bu projeyi silmek istediğinizden emin misiniz?')">
                            <i class="bi bi-trash me-2"></i>Projeyi Sil
                        </a>
                    </div>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Project" asp-action="Index" class="btn btn-outline-dark btn-lg px-5">
                    <i class="bi bi-grid me-2"></i>Tüm Projeleri Görüntüle
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.75rem;
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.15) !important;
        }

    .card-img-top {
        border-top-left-radius: 0.75rem;
        border-top-right-radius: 0.75rem;
    }

    .btn {
        border-radius: 0.5rem;
        padding: 0.6rem 1.5rem;
        font-size: 1rem;
        transition: all 0.3s;
    }

    .btn-lg {
        padding: 0.8rem 2rem;
        font-size: 1.1rem;
    }

    .text-muted {
        color: #6c757d;
    }

    .border-primary {
        border-color: #0d6efd !important;
    }

    .text-primary {
        color: #0d6efd !important;
    }

    .bg-primary {
        background-color: #0d6efd !important;
    }

    .form-text {
        font-size: 0.95rem;
        color: #6c757d;
    }
</style>

<script>
    $(document).ready(function() {
        // Resim yüklenemezse varsayılan resim göster
        $("img").on("error", function() {
            $(this).attr("src", "/img/default-project.jpg");
        });
    });
</script>