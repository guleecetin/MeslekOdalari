@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Hakkımızda";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<div class="container py-5">
    <!-- Sayfa Başlığı -->
    <div class="text-center mb-5">
       
        <p class="lead text-muted">Kurumumuz hakkında bilgiler</p>
        <hr class="my-4 mx-auto" style="max-width: 100px;">
    </div>

    <!-- Hakkımızda İçeriği -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h4 class="card-title fw-bold text-primary mb-3">
                            @item.Title
                        </h4>
                        <p class="card-text">
                            @Html.Raw(item.Description)
                        </p>
                    </div>
                </div>
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="col-12 text-center py-5">
                <div class="py-4">
                    <i class="bi bi-info-circle fs-1 text-muted"></i>
                    <h5 class="mt-3">Henüz içerik bulunmamaktadır</h5>
                    <p class="text-muted">Yakında hakkımızda bilgiler burada yer alacaktır</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        overflow: hidden;
        border-radius: 8px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

    .card-title {
        font-size: 1.75rem;
        color: #0d6efd;
    }

    .card-text {
        font-size: 1.2rem; /* Daha büyük yazı boyutu */
        line-height: 1.8; /* Satır arası mesafeyi arttırarak okuma kolaylığı sağladım */
    }

    h1 {
        font-size: 3rem; /* Başlık boyutunu büyüttüm */
        color: #0d6efd;
    }

    .lead {
        font-size: 1.4rem; /* Lead metnini büyüttüm */
    }

    @@media (max-width: 767.98px) {
        .card-body

    {
        padding: 1.5rem;
    }

        .card-title {
            font-size: 1.5rem; /* Kart başlığını küçülttüm */
        }

        .card-text {
            font-size: 1rem; /* Kart metnini biraz küçülttüm */
        }
    }
</style>

