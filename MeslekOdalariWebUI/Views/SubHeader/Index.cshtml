@model List<ResultSubHeaderDto>
@{
    ViewData["Title"] = "Üst Bilgi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="text-dark mb-0" style="font-size: 1.8rem;">Üst Bilgi Alanları</h3>
            <p class="text-muted" style="font-size: 1.1rem;">Tüm üst bilgi alanlarını aşağıda görebilirsiniz</p>
        </div>
        <a asp-controller="SubHeader" asp-action="CreateSubHeader" class="btn btn-outline-dark" style="font-size: 1.1rem;">
            <i class="bi bi-plus-circle me-2"></i>Yeni Üst Bilgi Ekle
        </a>
    </div>

    <div class="card border-0 shadow-lg">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-primary" style="font-size: 1.3rem;"><i class="bi bi-list-ul me-2"></i>Üst Bilgi Listesi</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th style="font-size: 1.2rem;">#</th>
                            <th style="font-size: 1.2rem;">Adres</th>
                            <th style="font-size: 1.2rem;">Email</th>
                            <th style="font-size: 1.2rem;">Facebook</th>
                            <th style="font-size: 1.2rem;">Twitter</th>
                            <th style="font-size: 1.2rem;">LinkedIn</th>
                            <th style="font-size: 1.2rem;">Instagram</th>
                            <th style="font-size: 1.2rem;" class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                        }
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td class="fw-bold" style="font-size: 1.2rem;">@count</td>
                                <td style="font-size: 1.2rem;">@item.Address</td>
                                <td style="font-size: 1.2rem;">@item.Email</td>
                                <td style="font-size: 1.2rem;"><a href="@item.Facebook" target="_blank">Facebook</a></td>
                                <td style="font-size: 1.2rem;"><a href="@item.Twitter" target="_blank">Twitter</a></td>
                                <td style="font-size: 1.2rem;"><a href="@item.Linkedln" target="_blank">LinkedIn</a></td>
                                <td style="font-size: 1.2rem;"><a href="@item.Instagram" target="_blank">Instagram</a></td>
                                <td class="text-end">
                                    <a asp-controller="SubHeader" asp-action="UpdateSubHeader" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-2" data-bs-toggle="tooltip" title="Güncelle">
                                        <i class="bi bi-pencil-square me-1"></i>Güncelle
                                    </a>
                                    <a asp-controller="SubHeader" asp-action="DeleteSubHeader" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Sil">
                                        <i class="bi bi-trash me-1"></i>Sil
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (count == 0)
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <div class="py-4">
                                        <i class="bi bi-info-circle fs-1 text-muted"></i>
                                        <h5 class="mt-3" style="font-size: 1.5rem;">Henüz üst bilgi eklenmemiş</h5>
                                        <p class="text-muted" style="font-size: 1.2rem;">Yeni bir üst bilgi eklemek için yukarıdaki butonu kullanabilirsiniz</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
        font-size: 1.2rem;
    }

    .btn-outline-info:hover, .btn-outline-danger:hover {
        color: white;
        background-color: #0d6efd;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.3s ease;
    }

    .btn-outline-dark:hover {
        background-color: #343a40;
        color: white;
    }
</style>

<script>
    $(document).ready(function () {
        $('[data-bs-toggle="tooltip"]').tooltip();
    });
</script>
