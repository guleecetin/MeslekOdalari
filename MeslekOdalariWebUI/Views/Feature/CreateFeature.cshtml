@model CreateFeatureDto
@{
    ViewData["Title"] = "Yeni Öne Çıkan Bilgisi Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <p class="text-muted">Öne çıkan bilgileri aşağıdaki formu doldurarak ekleyebilirsiniz.</p>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-primary">Öne Çıkan Bilgileri Ekle</h5>
        </div>
        <div class="card-body p-4">
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Resim Url</label>
                    <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Resim URL'si girin" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Üyelik Durumu</label>
                    <select asp-for="MembershipStatus" class="form-select">
                        <option>Seçiminizi Yapın</option>
                        <option value="True">Aktif</option>
                        <option value="False">Pasif</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Üye Sayısı</label>
                    <input type="number" asp-for="NumberofMembers" class="form-control" placeholder="Üye sayısını girin" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Proje Sayısı</label>
                    <input type="number" asp-for="NumberofProjects" class="form-control" placeholder="Proje sayısını girin" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Uzmanlık Alanı</label>
                    <input type="text" asp-for="AreasofExpertise" class="form-control" placeholder="Uzmanlık alanını girin" />
                </div>

                <button type="submit" class="btn btn-outline-dark mt-3">Kaydet</button>
            </form>
        </div>
    </div>
</div>

<style>
    .form-label {
        font-size: 1.1rem;
        font-weight: 600;
    }

    .form-control, .form-select {
        font-size: 1rem;
        padding: 0.75rem;
        border-radius: 0.375rem;
        transition: border-color 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: #0069d9;
            box-shadow: 0 0 5px rgba(0, 105, 217, 0.5);
        }

    .btn-outline-dark {
        border-color: #343a40;
        color: #343a40;
        padding: 0.75rem 1.25rem;
        font-size: 1.1rem;
    }

        .btn-outline-dark:hover {
            background-color: #343a40;
            color: white;
        }

    .card-header {
        font-size: 1.3rem;
    }

    .card-body {
        padding: 1.5rem;
    }

    .mb-3 {
        margin-bottom: 1.5rem;
    }

    .container-fluid {
        padding: 2rem;
    }
</style>
