@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Öne Çıkanlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Resim Url</th>
        <th>Üyelik Durumu</th>
        <th>Üye Sayısı</th>
        <th>Proje Sayısı</th>
        <th>Uzmanlık Alanı</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:50px;width:50px"/></td>
            <td>@(item.MembershipStatus ? "Aktif" : "Pasif")</td>
            <td>@item.NumberofMembers</td>
            <td>@item.NumberofProjects</td>
            <td>@item.AreasofExpertise</td>
            <td>
                <button onclick="deleteFeature(this)" id="@item.Id" class="btn btn-outline-danger">Sil</button>
                <a asp-controller="Feature" asp-action="UpdateFeature" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>

    }

</table>
<a asp-controller="Feature" asp-action="CreateFeature" class="btn btn-outline-dark">Yeni Öne Çıkanlar Ekle</a>


<script>
    function deleteFeature(button){
        var id=button.getAttribute("id");
        Swal.fire({
            title: "Silmek İstediğinize emin misiniz?",
            text: "Bu işlemi geri alamazsınız!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Feature/DeleteFeature/" + id;
            }
        });
    }
</script>

