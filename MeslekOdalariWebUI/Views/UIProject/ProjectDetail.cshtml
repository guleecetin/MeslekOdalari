@model ResultProjectDto
@{
    ViewData["Title"] = "Proje Detayları";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- Project Hero Section -->
<section class="project-hero position-relative text-white">
    <div class="project-overlay"></div>
    <div class="hero-image" style="background-image: url('@Model.ImageUrl');"></div>
    <div class="container position-relative z-index-1">
        <div class="row min-vh-50 align-items-center">
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="animate__animated animate__fadeIn">
                    <ol class="breadcrumb mb-3">
                        <li class="breadcrumb-item"><a href="/" class="text-white opacity-75">Ana Sayfa</a></li>
                        <li class="breadcrumb-item"><a asp-controller="UIProject" asp-action="Index" class="text-white opacity-75">Projeler</a></li>
                        <li class="breadcrumb-item active text-white" aria-current="page">@Model.Title</li>
                    </ol>
                </nav>
                <div class="project-badge mb-3 animate__animated animate__fadeInUp">
                    <i class="bi bi-building me-2"></i>Tamamlanan Proje
                </div>
                <h1 class="display-4 fw-bold text-white mb-3 animate__animated animate__fadeInUp">@Model.Title</h1>
            </div>
        </div>
    </div>
    <div class="wave-bottom">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120">
            <path fill="#ffffff" fill-opacity="1" d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,42.7C1120,32,1280,32,1360,32L1440,32L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path>
        </svg>
    </div>
</section>

<!-- Project Content Section -->
<section class="py-6 bg-light">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-8">
                <!-- Project Description -->
                <div class="card border-0 shadow-sm mb-4 project-card hover-effect">
                    <div class="card-body p-4 p-lg-5">
                        <div class="d-flex align-items-center mb-4">
                            <div class="icon-circle bg-primary bg-opacity-10 me-3">
                                <i class="bi bi-file-text text-primary fs-4"></i>
                            </div>
                            <h2 class="h3 fw-bold mb-0">Proje Açıklaması</h2>
                        </div>
                        <div class="title-separator mb-4"></div>
                        <div class="project-content">
                            <div class="lead mb-0 project-description">@Model.Description</div>
                        </div>
                    </div>
                </div>

                <!-- Project Gallery -->
                <div class="card border-0 shadow-sm mb-4 project-card hover-effect">
                    <div class="card-body p-4 p-lg-5">
                        <div class="d-flex align-items-center mb-4">
                            <div class="icon-circle bg-primary bg-opacity-10 me-3">
                                <i class="bi bi-images text-primary fs-4"></i>
                            </div>
                            <h2 class="h3 fw-bold mb-0">Proje Görselleri</h2>
                        </div>
                        <div class="title-separator mb-4"></div>
                        <div class="project-gallery">
                            <div class="row g-4">
                                <div class="col-12 mb-4">
                                    <div class="position-relative rounded overflow-hidden gallery-item">
                                        <img src="@Model.ImageUrl" class="img-fluid w-100 rounded" alt="@Model.Title" onerror="this.src='/img/default-project.jpg'">
                                        <div class="gallery-overlay">
                                            <a href="@Model.ImageUrl" class="btn btn-sm btn-light rounded-circle" data-bs-toggle="modal" data-bs-target="#imageModal">
                                                <i class="bi bi-zoom-in"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Project Info Card -->
                <div class="card border-0 shadow-sm mb-4 sticky-lg-top project-card hover-effect" style="top: 2rem; z-index: 10;">
                    <div class="card-body p-4">
                        <h3 class="h4 fw-bold text-dark mb-4">Proje Bilgileri</h3>
                        <div class="title-separator mb-4"></div>

                        <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <div class="icon-box bg-primary text-white me-3">
                                <i class="bi bi-building"></i>
                            </div>
                            <div>
                                <h4 class="h6 fw-bold text-dark mb-0">Proje Adı</h4>
                                <p class="mb-0">@Model.Title</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <div class="icon-box bg-success text-white me-3">
                                <i class="bi bi-calendar-check"></i>
                            </div>
                            <div>
                                <h4 class="h6 fw-bold text-dark mb-0">Proje Durumu</h4>
                                <p class="mb-0">Tamamlandı</p>
                            </div>
                        </div>

                        <a asp-controller="UIProject" asp-action="Index" class="btn btn-primary w-100 mt-3">
                            <i class="bi bi-grid me-2"></i>Tüm Projeleri Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content border-0 bg-transparent">
            <div class="modal-body p-0 position-relative">
                <button type="button" class="btn-close position-absolute top-0 end-0 bg-white rounded-circle m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                <img src="@Model.ImageUrl" class="img-fluid rounded w-100" alt="@Model.Title">
            </div>
        </div>
    </div>
</div>

<style>
    /* Genel Stiller */
    .py-6 {
        padding-top: 5rem;
        padding-bottom: 5rem;
    }

    .z-index-1 {
        z-index: 1;
    }

    .rounded-lg {
        border-radius: 1rem;
    }

    .shadow-hover {
        transition: all 0.3s ease;
    }

        .shadow-hover:hover {
            transform: translateY(-10px);
            box-shadow: 0 1rem 3rem rgba(13, 110, 253, 0.15) !important;
        }

    /* Hero Section Stilleri */
    .hero-section {
        background: linear-gradient(135deg, #0d6efd, #0143a3);
        padding-top: 7rem;
        padding-bottom: 8rem;
        position: relative;
        overflow: hidden;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('data:image/svg+xml;base64,');
        background-size: cover;
        opacity: 0.8;
    }

    .wave-bottom {
        position: absolute;
        bottom: -1px;
        left: 0;
        width: 100%;
        overflow: hidden;
        line-height: 0;
    }

        .wave-bottom svg {
            display: block;
            width: 100%;
        }

    .icon-badge {
        width: 80px;
        height: 80px;
        background-color: rgba(255, 255, 255, 0.15);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

        .icon-badge i {
            font-size: 2.5rem;
            color: white;
        }

    /* Animate.css Minimal */
    .animate__animated {
        animation-duration: 1s;
        animation-fill-mode: both;
    }

    .animate__delay-1s {
        animation-delay: 1s;
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translate3d(0, -30px, 0);
        }

        to {
            opacity: 1;
            transform: none;
        }
    }

    .animate__fadeInDown {
        animation-name: fadeInDown;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translate3d(0, 30px, 0);
        }

        to {
            opacity: 1;
            transform: none;
        }
    }

    .animate__fadeInUp {
        animation-name: fadeInUp;
    }

    /* Section Title */
    .section-title {
        position: relative;
        color: #333;
    }

    .title-separator {
        width: 80px;
        height: 4px;
        background: linear-gradient(to right, #0d6efd, #0143a3);
        border-radius: 2px;
    }

    /* Project Card Styles */
    .project-card {
        border-radius: 1rem;
        overflow: hidden;
        transition: all 0.4s ease;
        border: none;
    }

        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
        }

    .card-img-wrapper {
        overflow: hidden;
    }

    .project-card img {
        height: 250px;
        object-fit: cover;
        transition: all 0.8s ease;
    }

    .project-card:hover img {
        transform: scale(1.1);
    }

    .project-card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(13, 110, 253, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .project-card:hover .project-card-overlay {
        opacity: 1;
    }

    .project-actions {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .btn-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        font-size: 1.2rem;
    }

    .project-badge {
        background-color: white;
        color: #0d6efd;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 0.35rem 1rem;
        border-radius: 2rem;
    }

    /* CTA Section */
    .cta-section {
        position: relative;
    }

    .cta-wrapper {
        border-radius: 1rem;
        background: linear-gradient(135deg, #0d6efd, #0143a3);
    }

    /* Empty State */
    .empty-state {
        background-color: #f8f9fa;
        border-radius: 1rem;
        padding: 4rem 2rem;
    }

    .empty-state-icon {
        width: 100px;
        height: 100px;
        background-color: rgba(13, 110, 253, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

        .empty-state-icon i {
            font-size: 3rem;
            color: #0d6efd;
        }

    /* Responsive Button */
    .rounded-pill {
        border-radius: 50rem;
    }

    .btn {
        padding: 0.6rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .btn-outline-primary {
        color: #0d6efd;
        border-color: #0d6efd;
    }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            color: white;
        }

    /* Proje Detay Sayfası Stilleri */
    .project-hero {
        height: 60vh;
        min-height: 400px;
        overflow: hidden;
        position: relative;
    }

    .project-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.7) 100%);
        z-index: 1;
    }

    .hero-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-position: center;
        background-size: cover;
        z-index: 0;
    }

    .project-badge {
        display: inline-block;
        padding: 8px 16px;
        background-color: rgba(255,255,255,0.15);
        border-radius: 30px;
        font-size: 14px;
        font-weight: 500;
        backdrop-filter: blur(5px);
    }

    .icon-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(var(--bs-primary-rgb), 0.1);
    }

    .icon-box {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hover-effect {
        transition: all 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
        }

    .project-description {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #4a5568;
    }

    .gallery-item {
        position: relative;
        transition: all 0.3s ease;
        overflow: hidden;
        box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15);
    }

        .gallery-item img {
            transition: all 0.5s ease;
            height: auto;
            object-fit: cover;
        }

        .gallery-item:hover img {
            transform: scale(1.05);
        }

    .gallery-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        top: 0;
        background: rgba(0,0,0,0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .gallery-item:hover .gallery-overlay {
        opacity: 1;
    }

    @@media (max-width: 991.98px) {
        .project-hero {
            height: 50vh;
        }

        .py-6 {
            padding-top: 3rem !important;
            padding-bottom: 3rem !important;
        }
    }
</style>

<script>
    $(document).ready(function() {
        // Yumuşak kaydırma - hem projects hem contact için
        $('a[href^="#"]').on('click', function(e) {
            e.preventDefault();
            $('html, body').animate({
                scrollTop: $($(this).attr('href')).offset().top - 70
            }, 500, 'linear');
        });

        // AOS Animasyon (isteğe bağlı - CDN eklemek gerekir)
        if (typeof AOS !== 'undefined') {
            AOS.init({
                duration: 800,
                once: true
            });
        }
    });
</script>