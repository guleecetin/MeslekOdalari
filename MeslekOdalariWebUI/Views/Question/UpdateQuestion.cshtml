@model UpdateQuestDto
@{
    ViewData["Title"] = "Soru-Cevap Güncelleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Title -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Question" asp-action="Index" class="text-decoration-none" style="font-size: 1.1rem;">Soru-Cevap Yönetimi</a></li>
                    <li class="breadcrumb-item active" aria-current="page" style="font-size: 1.1rem;">Güncelle</li>
                </ol>
            </nav>
            <h2 class="fw-bold text-gradient" style="font-size: 2.2rem;">Soru-Cevap Güncelle</h2>
            <p class="text-muted" style="font-size: 1.2rem;">Sistemdeki bir soru-cevap çiftini güncellemek için aşağıdaki formu doldurun.</p>
        </div>
    </div>

    <!-- Form Card -->
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card shadow border-0 rounded-3 animate-fade-in">
                <div class="card-header bg-gradient">
                    <h4 class="mb-0 text-white" style="font-size: 1.5rem;"><i class="fas fa-edit me-2"></i>Soru-Cevap Güncelleme</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label for="Question" class="form-label fw-medium">Soru <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-question-circle text-primary"></i>
                                </span>
                                <input type="text" asp-for="Question" class="form-control border-start-0 ps-0" placeholder="Soruyu buraya yazın..." />
                            </div>
                            <span asp-validation-for="Question" class="text-danger mt-1 d-block"></span>
                            <small class="text-muted">Kısa ve anlaşılır bir soru yazın.</small>
                        </div>

                        <div class="mb-4">
                            <label for="Answer" class="form-label fw-medium">Cevap <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="fas fa-comment-dots text-primary"></i>
                                </span>
                                <textarea asp-for="Answer" rows="5" class="form-control border-start-0 ps-0" placeholder="Cevabı buraya yazın..."></textarea>
                            </div>
                            <span asp-validation-for="Answer" class="text-danger mt-1 d-block"></span>
                            <small class="text-muted">Detaylı ve açıklayıcı bir cevap yazın.</small>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="Question" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FontAwesome CDN -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    /* Gradient Renk Tanımları */
    .text-gradient {
        background: linear-gradient(45deg, #3a7bd5, #00d2ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .bg-gradient {
        background: linear-gradient(45deg, #3a7bd5, #00d2ff);
    }

    /* Kart Animasyonu */
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* Form Styling */
    .form-control:focus {
        border-color: #3a7bd5;
        box-shadow: 0 0 0 0.2rem rgba(58, 123, 213, 0.15);
    }

    .form-control, .input-group-text {
        border-radius: 0.5rem;
        padding: 0.6rem 1rem;
        font-size: 1.1rem;
    }

    .input-group .form-control {
        min-height: 46px;
    }

    label, .form-label {
        font-size: 1.15rem;
    }

    small.text-muted {
        font-size: 0.9rem;
    }

    .btn {
        border-radius: 0.5rem;
        padding: 0.55rem 1.5rem;
        transition: all 0.2s ease;
        font-size: 1.1rem;
    }

    .btn-primary {
        background: linear-gradient(45deg, #3a7bd5, #00d2ff);
        border: none;
    }

        .btn-primary:hover {
            box-shadow: 0 5px 15px rgba(58, 123, 213, 0.3);
        }

    .btn-outline-secondary {
        border-color: #dee2e6;
        color: #495057;
    }

        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
            border-color: #dee2e6;
            color: #212529;
        }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Input alanlarına focus efekti
        const formControls = document.querySelectorAll('.form-control');
        formControls.forEach(control => {
            control.addEventListener('focus', function() {
                this.closest('.input-group')?.classList.add('shadow-sm');
            });
            control.addEventListener('blur', function() {
                this.closest('.input-group')?.classList.remove('shadow-sm');
            });
        });
    });
</script>