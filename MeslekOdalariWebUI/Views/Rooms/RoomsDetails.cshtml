@model ResultRoomsDto
@{
    ViewData["Title"] = "Meslek Odası Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="text-dark mb-0">Meslek Odası Detayları</h3>
            <p class="text-muted">@Model.Title odası hakkında ayrıntılı bilgi</p>
        </div>
        <a asp-controller="Rooms" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Listeye Dön
        </a>
    </div>

    <div class="row">
        <!-- Sol Kolon - Oda Genel Bilgileri -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-building me-2"></i>Oda Bilgileri</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <div class="position-relative d-inline-block">
                            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-thumbnail rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;" />
                            <span class="position-absolute bottom-0 end-0 badge rounded-pill bg-success">
                                <i class="bi bi-check-circle"></i>
                            </span>
                        </div>
                        <h4 class="mt-3 mb-1 fw-bold">@Model.Title</h4>
                        <p class="text-muted mb-2">
                            <i class="bi bi-award me-1"></i>Lisans: @Model.LicenseNumber
                        </p>
                        <p class="badge bg-light text-dark">
                            <i class="bi bi-calendar-event me-1"></i>Kuruluş: @Model.Established
                        </p>
                    </div>

                    <hr />

                    <div class="mt-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted"><i class="bi bi-people me-2"></i>Üye Sayısı:</span>
                            <span class="fw-bold">@Model.MemberCount</span>
                        </div>
                        <div class="progress mb-4" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @(Math.Min(Model.MemberCount, 500) / 5)%"></div>
                        </div>

                        <div class="mt-4">
                            <a href="@Model.WebSite" target="_blank" class="btn btn-outline-primary btn-sm w-100 mb-2">
                                <i class="bi bi-globe me-1"></i>Web Sitesi Ziyaret Et
                            </a>
                            <a href="mailto:@Model.Email" class="btn btn-outline-info btn-sm w-100">
                                <i class="bi bi-envelope me-1"></i>Email Gönder
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orta Kolon - Başkan Bilgileri -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient-info text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Başkan Bilgileri</h5>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <img src="@Model.PresidentImageUrl" alt="@Model.PresidentName" class="img-thumbnail rounded-circle shadow" style="width: 200px; height: 200px; object-fit: cover;" />
                        <h5 class="mt-3 mb-1 fw-bold">@Model.PresidentName</h5>
                        <p class="text-muted">Oda Başkanı</p>
                    </div>

                    <div class="mt-4">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <h6 class="card-title text-center mb-3">Meslek Odası Başkanlık Görevleri</h6>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item bg-transparent border-0 ps-0">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>Oda üyelerini temsil etmek
                                    </li>
                                    <li class="list-group-item bg-transparent border-0 ps-0">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>Mesleki standartları korumak
                                    </li>
                                    <li class="list-group-item bg-transparent border-0 ps-0">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>Meslek etiğini gözetmek
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sağ Kolon - İletişim Bilgileri -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient-success text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>İletişim Bilgileri</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item border-0 ps-0">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary rounded-circle p-2 d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-envelope text-white"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">Email Adresi</h6>
                                    <p class="text-primary mb-0">@Model.Email</p>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item border-0 ps-0">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="bg-success rounded-circle p-2 d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-telephone text-white"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">Telefon</h6>
                                    <p class="text-success mb-0">@Model.Phone</p>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item border-0 ps-0">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="bg-info rounded-circle p-2 d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-globe text-white"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">Web Sitesi</h6>
                                    <p class="text-info mb-0">@Model.WebSite</p>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item border-0 ps-0">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <div class="bg-warning rounded-circle p-2 d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                                        <i class="bi bi-geo-alt text-white"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="mb-1">Adres</h6>
                                    <p class="text-muted mb-0">@Model.Address</p>
                                </div>
                            </div>
                        </li>
                    </ul>

                    <div class="mt-4">
                        <div class="card bg-light">
                            <div class="card-body p-3">
                                <h6 class="card-title mb-3"><i class="bi bi-geo-alt-fill me-2"></i>Konum</h6>
                                <div class="ratio ratio-16x9 rounded overflow-hidden shadow-sm">
                                    <div class="bg-light d-flex justify-content-center align-items-center text-center p-3">
                                        <div>
                                            <i class="bi bi-map fs-1 text-muted"></i>
                                            <p class="mt-2 mb-0 small">Harita önizlemesi bulunmamaktadır</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Açıklama Bölümü -->
    <div class="row mt-2">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-dark text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Oda Hakkında</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 text-center mb-3 mb-md-0">
                            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 100px;" />
                        </div>
                        <div class="col-md-10">
                            <h5 class="mb-3">@Model.Title</h5>
                            <p class="text-muted">@Model.Description</p>

                            <div class="d-flex align-items-center mt-4">
                                <div class="me-auto">
                                    <span class="badge bg-primary me-2">Meslek Odası</span>
                                    <span class="badge bg-info me-2">@Model.MemberCount Üye</span>
                                    <span class="badge bg-success">@Model.Established</span>
                                </div>
                                <div>
                                    <a asp-controller="Rooms" asp-action="UpdateRooms" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-pencil-square me-1"></i>Düzenle
                                    </a>
                                    <a asp-controller="Rooms" asp-action="Index" class="btn btn-sm btn-dark">
                                        <i class="bi bi-arrow-left me-1"></i>Listeye Dön
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(to right, #4e73df, #224abe);
    }

    .bg-gradient-info {
        background: linear-gradient(to right, #36b9cc, #1a8eab);
    }

    .bg-gradient-success {
        background: linear-gradient(to right, #1cc88a, #169a6b);
    }

    .bg-gradient-dark {
        background: linear-gradient(to right, #5a5c69, #373840);
    }

    .card {
        transition: all 0.3s ease;
        border-radius: 0.5rem;
        overflow: hidden;
    }

        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,.05);
    }

    .list-group-item {
        padding: 1rem 0;
    }

    .img-thumbnail {
        transition: transform 0.3s ease;
    }

        .img-thumbnail:hover {
            transform: scale(1.05);
        }

    .btn-outline-primary:hover, .btn-outline-info:hover {
        color: white;
    }

    /* Yazı boyutlarını büyüttüm */
    .card-body, .card-header, .list-group-item, .form-label {
        font-size: 1.1rem; /* Yazı boyutunu büyüttüm */
    }

    .btn, .btn-outline-primary, .btn-outline-info {
        font-size: 1.1rem; /* Buton yazı boyutunu büyüttüm */
    }

    .card-title {
        font-size: 1.3rem; /* Kart başlık boyutunu büyüttüm */
    }

    .card-subtitle {
        font-size: 1.1rem; /* Kart alt başlık boyutunu büyüttüm */
    }
</style>
