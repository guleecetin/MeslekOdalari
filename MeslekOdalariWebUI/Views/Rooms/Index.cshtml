@model List<ResultRoomsDto>
@{
    ViewData["Title"] = "Meslek Odaları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="text-dark mb-0">Meslek Odaları</h3>
            <p class="text-muted">Sistemdeki tüm meslek odalarını burada görüntüleyebilirsiniz</p>
        </div>
        <a asp-controller="Rooms" asp-action="CreateRooms" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Yeni Meslek Odası Ekle
        </a>
    </div>

    <!-- Statistics Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Count()</h4>
                        <div class="small">Toplam Meslek Odaları</div>
                    </div>
                    <i class="bi bi-building fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Rooms Table Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-primary"><i class="bi bi-list-ul me-2"></i>Meslek Odaları Listesi</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th width="5%" class="ps-4">#</th>
                            <th width="15%">Resim</th>
                            <th width="55%">Başlık</th>
                            <th width="25%" class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                        }
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td class="ps-4 fw-bold">@count</td>
                                <td>
                                    <img src="@item.ImageUrl" class="img-thumbnail rounded shadow-sm" style="max-height:75px;max-width:75px" alt="@item.Title" />
                                </td>
                                <td>@item.Title</td>
                                <td class="text-end pe-4">
                                    <a asp-controller="Rooms" asp-action="RoomsDetails" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary me-2">
                                        <i class="bi bi-eye me-1"></i>Detaylar
                                    </a>
                                    <a asp-controller="Rooms" asp-action="UpdateRooms" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-info me-2">
                                        <i class="bi bi-pencil-square me-1"></i>Güncelle
                                    </a>
                                    <button onclick="deleteRoom(this)" id="@item.Id" data-title="@item.Title"
                                            class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash me-1"></i>Sil
                                    </button>
                                </td>
                            </tr>
                        }
                        @if (count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-center py-5">
                                    <div class="py-4">
                                        <i class="bi bi-building fs-1 text-muted"></i>
                                        <h5 class="mt-3">Henüz meslek odası bulunmamaktadır</h5>
                                        <p class="text-muted">Yeni bir meslek odası eklemek için "Yeni Meslek Odası Ekle" butonunu kullanabilirsiniz</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
    }

    .btn-outline-primary:hover, .btn-outline-info:hover, .btn-outline-danger:hover {
        color: white;
    }

    .img-thumbnail {
        object-fit: cover;
        transition: transform 0.3s;
    }

        .img-thumbnail:hover {
            transform: scale(1.05);
        }
</style>

<script>
    function deleteRoom(button) {
        var id = button.getAttribute("id");
        var title = button.getAttribute("data-title");

        Swal.fire({
            title: "Meslek Odasını Silmek İstediğinizden Emin Misiniz?",
            html: '<strong>' + title + '</strong> başlıklı meslek odasını silmek üzeresiniz. Bu işlem geri alınamaz.',
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Evet, Sil!",
            cancelButtonText: "İptal"
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Rooms/DeleteRooms/" + id;
            }
        });
    }

    // Sayfa yüklendiğinde çalışacak kod
    $(document).ready(function() {
        // Tooltip etkinleştirme
        $('[data-bs-toggle="tooltip"]').tooltip();

        // Tablo satırlarına hover animasyonu
        $('tbody tr').hover(
            function() {
                $(this).css('transition', 'background-color 0.3s').css('background-color', '#f8f9fa');
            },
            function() {
                $(this).css('background-color', '');
            }
        );
    });
</script>