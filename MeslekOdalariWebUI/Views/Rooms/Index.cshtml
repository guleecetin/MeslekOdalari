@model List<ResultRoomsDto>
@{
    ViewData["Title"] = "Meslek Odaları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover table-bordered">
    @{
        int count = 0;
    }
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:75px;width:75px"/></td>
            <td>@item.Title</td>
            <td>
                <a asp-controller="Rooms" asp-action="DeleteRooms" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
                <a asp-controller="Rooms" asp-action="UpdateRooms" asp-route-id="@item.Id" class="btn btn-outline-info">Güncelle</a>
                <a asp-controller="Rooms" asp-action="RoomsDetails" asp-route-id="@item.Id" class="btn btn-outline-primary">Detaylar</a>
            </td>
        </tr>

    }

</table>
<a asp-controller="Rooms" asp-action="CreateRooms" class="btn btn-outline-dark">Yeni Meslek Odası Ekle</a>



