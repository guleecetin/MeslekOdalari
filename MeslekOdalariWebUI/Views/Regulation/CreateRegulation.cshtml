@model CreateRegulationDto
@{
    ViewData["Title"] = "Yeni Mevzuat Ekleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="text-dark mb-0">Yeni Mevzuat Ekleme</h3>
            <p class="text-muted">Sisteme yeni bir mevzuat kaydı eklemek için formu doldurun</p>
        </div>
        <a asp-controller="Regulation" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Listeye Dön
        </a>
    </div>

    <!-- Form Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 text-primary"><i class="bi bi-file-earmark-plus me-2"></i>Mevzuat Bilgileri</h5>
        </div>
        <div class="card-body">
            <form method="post" id="regulationForm">
                <div class="row g-4">
                    <!-- Esnaf Ve Sanatkarlar Kanunu Tarihçesi -->
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label for="HistoryofTradesmenandCraftsmenLawUrl" class="form-label fw-bold mb-2">
                                <i class="bi bi-link me-1 text-primary"></i>Esnaf Ve Sanatkarlar Kanunu Tarihçesi
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-file-earmark-text"></i></span>
                                <input type="text" asp-for="HistoryofTradesmenandCraftsmenLawUrl" class="form-control form-control-lg"
                                       placeholder="URL adresini girin..." />
                            </div>
                            <span asp-validation-for="HistoryofTradesmenandCraftsmenLawUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- 5362 Sayılı Esnaf Ve Sanatkarlar Kanunu -->
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label for="TradesmenArtisansLawNo5362Url" class="form-label fw-bold mb-2">
                                <i class="bi bi-link me-1 text-primary"></i>5362 Sayılı Esnaf Ve Sanatkarlar Kanunu
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-file-earmark-text"></i></span>
                                <input type="text" asp-for="TradesmenArtisansLawNo5362Url" class="form-control form-control-lg"
                                       placeholder="URL adresini girin..." />
                            </div>
                            <span asp-validation-for="TradesmenArtisansLawNo5362Url" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Yönetmelikler -->
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label for="RegulationsUrl" class="form-label fw-bold mb-2">
                                <i class="bi bi-link me-1 text-primary"></i>Yönetmelikler
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-file-earmark-text"></i></span>
                                <input type="text" asp-for="RegulationsUrl" class="form-control form-control-lg"
                                       placeholder="URL adresini girin..." />
                            </div>
                            <span asp-validation-for="RegulationsUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Genelgeler -->
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label for="CircularsUrl" class="form-label fw-bold mb-2">
                                <i class="bi bi-link me-1 text-primary"></i>Genelgeler
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-file-earmark-text"></i></span>
                                <input type="text" asp-for="CircularsUrl" class="form-control form-control-lg"
                                       placeholder="URL adresini girin..." />
                            </div>
                            <span asp-validation-for="CircularsUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Tebliğler -->
                    <div class="col-md-12 mb-4">
                        <div class="form-group">
                            <label for="NotificationsUrl" class="form-label fw-bold mb-2">
                                <i class="bi bi-link me-1 text-primary"></i>Tebliğler
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-file-earmark-text"></i></span>
                                <input type="text" asp-for="NotificationsUrl" class="form-control form-control-lg"
                                       placeholder="URL adresini girin..." />
                            </div>
                            <span asp-validation-for="NotificationsUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Form Buttons -->
                    <div class="col-12 mt-2">
                        <div class="d-flex justify-content-end">
                            <a asp-controller="Regulation" asp-action="Index" class="btn btn-light btn-lg me-2">
                                <i class="bi bi-x-circle me-2"></i>İptal
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle me-2"></i>Kaydet
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .form-control-lg {
        font-size: 1.15rem;
        padding: 0.7rem 1rem;
    }

    .input-group-text {
        font-size: 1.15rem;
    }

    .card-body, .card-header, .btn, .text-muted, h3, h5, p, label {
        font-size: 1.15rem;
    }

    .form-label {
        color: #495057;
    }

    .btn-lg {
        padding: 0.7rem 1.5rem;
    }

    .input-group {
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        border-radius: 0.375rem;
    }

        .input-group:focus-within {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
</style>

<script>
    $(document).ready(function() {
        // Form girişleri üzerinde animasyon efekti
        $('input').focus(function() {
            $(this).parent('.input-group').css('transition', 'all 0.3s ease').css('transform', 'translateY(-2px)');
        }).blur(function() {
            $(this).parent('.input-group').css('transform', 'translateY(0)');
        });

        // Form gönderildiğinde basit bir doğrulama
        $('#regulationForm').submit(function(e) {
            let isValid = true;
            $('input[type="text"]').each(function() {
                if ($(this).val().trim() === '') {
                    const fieldName = $(this).prev().text();
                    Swal.fire({
                        title: "Eksik Bilgi",
                        text: "Lütfen tüm alanları doldurunuz.",
                        icon: "warning",
                        confirmButtonColor: "#3085d6",
                        confirmButtonText: "Tamam"
                    });
                    isValid = false;
                    return false; // each döngüsünden çık
                }
            });

            if (!isValid) {
                e.preventDefault();
            } else {
                // Form gönderilirken yükleniyor göstergesi
                Swal.fire({
                    title: "Kaydediliyor...",
                    html: "Lütfen bekleyin",
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
            }
        });
    });
</script>


